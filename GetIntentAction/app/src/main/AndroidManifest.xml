<?xml version="1.0" encoding="utf-8"?>
<manifest package="p0271_getintentaction.getintentaction"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Info" android:label="Date/time info">
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.showdate"/>
                <action android:name="ru.startandroid.intent.action.showtime"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>

    </application>

</manifest>
